<h1>THis is an  update route</h1>
<header>
    <img src="/images/update-img.png">
</header>

<form action="/update/<%= trail._id %>/?_method=put" method="POST">
    
    <div class="form-group"> 
        <label for="Trail">Trail Name:</label>
           <input type="text" id="trail" name="name" class="form-control" value="<%= trail.name %>"/> 
   </div> 
   <div class="form-group"> 
        <label for="Trail">Trail location:</label>
            <input type="text" id="trail" name="location" class="form-control" value="<%= trail.location %>"/> 
  </div> 
  <div class="form-group"> 
        <label for="Trail">Trail difficulty rating(1-5):</label>
            <input type="text" id="trail" name="difficulty" class="form-control" value="<%= trail.difficulty %>"/> 
  </div> 
  <div class="form-group"> 
        <label for="Trail">Trail length in miles:</label>
             <input type="text" id="trail" name="length" class="form-control" value="<%= trail.length%>"/> 
  </div> 
  <div class="form-group"> 
        <label for="Trail">Trail elevation Change in feet:</label>
              <input type="text" id="trail" name="elevationChange" class="form-control" value="<%= trail.elevationChange %>"/> 
  </div> 
  <div class="form-group"> 
        <label for="Trail">Trail type:</label>
              <input type="text" id="trail" name="routeType" class="form-control" value="<%= trail.routeType %>"/> 
  </div> 
  <div class="form-group"> 
        <label for="Trail">Recent reviews:</label>
              <input type="text" id="trail" name="comment" class="form-control" value="<%= trail.comment.name %>"/> 
  </div> 

  <input type="submit" value="Update Trail" class="btn btn-primary" />
        <a href="/socal" class="btn btn-secondary">Cancel</a>
</form>
  
<head>
    <ui style="display:flex;justify-content: space-around;"><a href='/' class="btn btn-secondary">Home</a></ui>
</head>

