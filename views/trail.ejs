<h1>Info on <%= trail.name%> </h1>

<ul style="justify-content: right;">
 <li> Trail: &nbsp <%=  trail.name %>  </li> 
 <li> Location URL: &nbsp <%=  trail.url %>  </li> 
 <li> State: &nbsp <%=  trail.state %>  </li> 
 <li> Difficulty: &nbsp <%=  trail.difficulty %>  </li> 
 <li> Length of trail: &nbsp<%=  trail.length %>  </li> 
 <li> Elevation change: &nbsp<%=  trail.elevationChange %>  </li> 
 <li> Route type: &nbsp <%=  trail.routeType %>  </li> 
</ul>
  
  <img src=<%= trail.img %> alt="image">   
  
  <head>
    <ul style="display: flex; justify-content: space-around">
      
      <a href="/newComment" class="btn btn-secondary">Add a comment here!</a>
    </ul>
</head>

  <ul>
    <% comments.forEach((comment) => { %>
    <li   style="justify-content: space-between;" class=" d-flex justify-content-between">
      <div>

        User name: &nbsp <%= comment.name %>    
      </div>
      <div>
        Trail comment: &nbsp <%= comment.review %>
      </div>
      
      <div class="links">
        
        <a href="/commentEdit/<%= comment._id %>" class="btn btn-primary">Update comment</a>  
       
        <form action="/delete/<%= comment._id %>/?_method=DELETE" method="POST" class="d-inline">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>  
      </div>
    </li>
    <% }) %>
  </ul>
  
