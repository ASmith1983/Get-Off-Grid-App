
<div style="justify-content: center;">
  <h1>Trail: <%= trail.name%> </h1>
</div>


<div style="justify-content: center;  font-size: 20px;">
  <ul>
      <li> Trail: &nbsp <%=  trail.name %>  </li> 
      <li> Trailhead: &nbsp <%=  trail.trailhead %>  </li> 
      <li> Location URL: &nbsp <%=  trail.url %>  </li> 
      <li> State: &nbsp <%=  trail.state %>  </li> 
      <li> Difficulty: &nbsp <%=  trail.difficulty %>  </li> 
      <li> Length of trail: &nbsp<%=  trail.length %>  </li> 
      <li> Elevation change: &nbsp<%=  trail.elevationChange %>  </li> 
      <li> Route type: &nbsp <%=  trail.routeType %>  </li> 
  </ul>
</div>
  
  <img style="border-radius: 20px;" src=<%= trail.img %> alt="image">   

<h1 style="align-items: center; margin: 0 auto;">Comments:</h1>

<div style="padding: 5%; margin-bottom: 0 auto; border-style: double; border-radius: 20px;">
 
  <ul>
    <% comments.forEach((comment) => { %>
    <li class=" d-flex justify-content-between" >
        <div>

          User: &nbsp <%= comment.name %>   

        </div>
        <br>
        <div>

          Comment: &nbsp <%= comment.review %>

        </div>
        <div>

          Trail: &nbsp <%= comment.owner %>

        </div>
        
        <div class="links">
          
          <a style="margin-top: 20%; " href="/commentEdit/<%= comment._id %>" class="btn btn-primary">Update comment</a>  
        
          <form style="margin-top: 20%;" action="/delete/<%= comment._id %>/?_method=DELETE" method="POST" class="d-inline">
              <input  type="submit" value="Delete" style="margin-left: 80%;" class="btn btn-danger" />
          </form>  
          
        </div>
    </li>
    <% }) %>
  </ul>
</div> 

<head>
  <ul style="display: flex; justify-content: space-around; padding:  10%;">
    
    <a href="/newComment" class="btn btn-secondary">Add a comment here!</a>

  </ul>

</head>

