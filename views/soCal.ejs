<ul>
  <% trails.forEach((trail) => { %>
  <li class="list-group-item d-flex justify-content-between">
    <div><%= trail.name %></div>
    <div class="links">
      <a href="/trail/<%= trail._id %>" class="btn btn-info">View Trail</a> 
      
      <a href="/edit/<%= trail._id %>" class="btn btn-primary">Update Trail</a>  
     
      <form action="/delete/<%= trail._id %>/?_method=DELETE" method="POST" class="d-inline">
          <input type="submit" value="Delete" class="btn btn-danger" />
      </form>  
    </div>
  </li>
  <% }) %>
</ul>

