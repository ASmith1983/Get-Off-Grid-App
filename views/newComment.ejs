
<h1 style="padding: 2%; margin-top: 10%;">Create your own comment to input</h1>
    <form action="/newComment" method="POST"> 

        <div class="form-group" style="padding: 10%;"> 
            <label for="Comment">

                Name: <input type="text" id="comment" name="name" class="form-control" /> 
                Comments/suggestions: <input type="text" id="comment" name="review" class="form-control" />
                Trail Name: <input type="list"  id="comment" name="owner" class="form-control" >
                
            </label>
                            
        </div>  
        
      
        <input type="submit" value="Submit" class="btn btn-danger" />
            
            <a href="/" class="btn btn-secondary">Cancel</a> 
    </form> 

    <header style="margin: 10%;">

        <h2>Comments and suggestion from community below:</h2>
   
        <ul>
            <% comments.forEach((comment) => { %>
            <li  style="color: whitesmoke;" class="list-group-item d-flex justify-content-between;">
                <div>
                    Name: &nbsp <%= comment.name %>
                </div>
                    <ul>  
                        <li>
                             Comment: &nbsp <%= comment.review %>
                        </li>
                        <li>
                            Trail id: &nbsp <%= comment.owner %>
                        </li>
                    </ul>   
            </li>
                <div class="links">
                
                    <a  href="/commentEdit/<%= comment._id %>" class="btn btn-primary">Update comment</a>  
                
                    <form action="/delete/<%= comment._id %>/?_method=DELETE" method="POST" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>  

                </div>
            </li>
            <% }) %>
        </ul>

    </header>

